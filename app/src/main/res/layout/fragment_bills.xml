<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    tools:context=".ui.bill.BillsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 状态栏占位 -->
        <View
            android:id="@+id/status_bar_placeholder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/black" />

        <!-- 账单数量提示 -->
        <TextView
            android:id="@+id/tv_bill_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/surface"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            tools:text="共10条账单" />

        <!-- 顶部操作栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/surface"
            android:elevation="0dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- 排序按钮 -->
            <ImageButton
                android:id="@+id/btn_sort"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/sort"
                android:src="@drawable/ic_sort"
                app:tint="@color/text_primary" />

            <!-- 筛选按钮 -->
            <ImageButton
                android:id="@+id/btn_filter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/filter"
                android:src="@drawable/ic_filter"
                app:tint="@color/text_primary" />

            <!-- 查找按钮 -->
            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/search"
                android:src="@drawable/ic_search"
                app:tint="@color/text_primary" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- 当前排序方式显示 -->
            <TextView
                android:id="@+id/tv_sort_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                tools:text="按开始日期降序" />

        </LinearLayout>

        <!-- 账单列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_bills"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_bill" />

        <!-- 空状态 -->
        <LinearLayout
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:alpha="0.3"
                android:src="@drawable/ic_bills"
                app:tint="@color/text_hint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/no_bills"
                android:textColor="@color/text_hint"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 添加按钮 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="@string/add_bill"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/primary"
        app:elevation="0dp"
        app:tint="@color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
