<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.settings.DisplaySettingsActivity">

    <!-- 顶部工具栏 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/surface"
        android:elevation="0dp"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/text_primary"
        app:title="@string/display_settings"
        app:titleTextColor="@color/text_primary" />

    <!-- 内容区域 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 主题设置模块 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- 模块标题：主题设置 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_settings"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- 主题颜色条目 -->
                    <LinearLayout
                        android:id="@+id/item_theme_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/theme_color"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <!-- 颜色显示区域 -->
                        <View
                            android:id="@+id/view_theme_color_preview"
                            android:layout_width="48dp"
                            android:layout_height="24dp"
                            android:background="@drawable/bg_color_preview"
                            android:layout_marginEnd="8dp" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_arrow_right_small"
                            app:tint="@color/text_hint"
                            android:contentDescription="@null" />

                    </LinearLayout>

                    <!-- 深色模式条目 -->
                    <LinearLayout
                        android:id="@+id/item_dark_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/dark_mode"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <!-- 深色模式下拉选择框 -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_dark_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxStrokeWidth="1dp"
                            app:boxStrokeColor="@color/divider"
                            app:hintEnabled="false"
                            app:endIconTint="@color/text_primary">

                            <AutoCompleteTextView
                                android:id="@+id/spinner_dark_mode"
                                android:layout_width="140dp"
                                android:layout_height="48dp"
                                android:inputType="none"
                                android:textSize="13sp"
                                android:gravity="center"
                                android:paddingHorizontal="8dp"
                                android:textColor="@color/text_primary"
                                android:dropDownHeight="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 字体大小设置卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/font_size_setting"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- 当前字体大小显示 -->
                    <TextView
                        android:id="@+id/tv_current_font_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="16sp"
                        android:textColor="@color/primary"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <!-- 滑动条 -->
                    <com.google.android.material.slider.Slider
                        android:id="@+id/slider_font_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:valueFrom="12"
                        android:valueTo="20"
                        android:stepSize="1"
                        android:value="16" />

                    <!-- 预览文本 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/divider"
                        app:cardBackgroundColor="@color/background">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/font_preview"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_preview_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/font_preview_text"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- 应用按钮 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_apply_font_size"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/apply"
                        android:textColor="@color/primary"
                        android:textSize="16sp"
                        app:cornerRadius="8dp"
                        app:strokeColor="@color/primary"
                        app:strokeWidth="1dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- 颜色选择器弹窗遮罩层 -->
    <FrameLayout
        android:id="@+id/layout_color_picker_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <!-- 颜色选择器弹窗 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_color_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:layout_gravity="center"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_theme_color"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- 颜色选择区域 -->
                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_hue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:valueFrom="0"
                    android:valueTo="360"
                    android:stepSize="1"
                    android:value="210"
                    app:trackHeight="12dp"
                    app:trackColorInactive="#E0E0E0"
                    app:thumbColor="@color/primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/hue"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

                <!-- 饱和度和亮度预览区域 -->
                <FrameLayout
                    android:id="@+id/color_preview_container"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/bg_color_gradient">

                    <View
                        android:id="@+id/view_color_preview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/primary" />

                </FrameLayout>

                <!-- 按钮区域 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_cancel_color"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="@string/cancel"
                        android:textColor="@color/primary"
                        android:textSize="14sp"
                        app:cornerRadius="8dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:strokeColor="@color/primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_confirm_color"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="@string/confirm"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:cornerRadius="8dp"
                        android:backgroundTint="@color/primary" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
