<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.settings.DisplaySettingsActivity">

    <!-- 顶部工具栏 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="0dp"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/black"
        app:title="@string/display_settings"
        app:titleTextColor="@color/black" />

    <!-- 内容区域 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 主题颜色设置卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_color_setting"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/theme_color_description"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <!-- 颜色选择器 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- 蓝色 -->
                        <FrameLayout
                            android:id="@+id/color_blue"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/bg_color_selector"
                            android:clickable="true"
                            android:focusable="true">

                            <View
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_color_blue" />

                            <ImageView
                                android:id="@+id/iv_check_blue"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_check"
                                app:tint="@color/white"
                                android:visibility="visible"
                                android:contentDescription="@null" />

                        </FrameLayout>

                        <!-- 紫色 -->
                        <FrameLayout
                            android:id="@+id/color_purple"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/bg_color_selector"
                            android:clickable="true"
                            android:focusable="true">

                            <View
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_color_purple" />

                            <ImageView
                                android:id="@+id/iv_check_purple"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_check"
                                app:tint="@color/white"
                                android:visibility="gone"
                                android:contentDescription="@null" />

                        </FrameLayout>

                        <!-- 橙色 -->
                        <FrameLayout
                            android:id="@+id/color_orange"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/bg_color_selector"
                            android:clickable="true"
                            android:focusable="true">

                            <View
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_color_orange" />

                            <ImageView
                                android:id="@+id/iv_check_orange"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_check"
                                app:tint="@color/white"
                                android:visibility="gone"
                                android:contentDescription="@null" />

                        </FrameLayout>

                        <!-- 红色 -->
                        <FrameLayout
                            android:id="@+id/color_red"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/bg_color_selector"
                            android:clickable="true"
                            android:focusable="true">

                            <View
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_color_red" />

                            <ImageView
                                android:id="@+id/iv_check_red"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_check"
                                app:tint="@color/white"
                                android:visibility="gone"
                                android:contentDescription="@null" />

                        </FrameLayout>

                        <!-- 绿色 -->
                        <FrameLayout
                            android:id="@+id/color_green"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/bg_color_selector"
                            android:clickable="true"
                            android:focusable="true">

                            <View
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_color_green" />

                            <ImageView
                                android:id="@+id/iv_check_green"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_check"
                                app:tint="@color/white"
                                android:visibility="gone"
                                android:contentDescription="@null" />

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 字体大小设置卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/font_size_setting"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- 当前字体大小显示 -->
                    <TextView
                        android:id="@+id/tv_current_font_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="16sp"
                        android:textColor="@color/primary"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <!-- 滑动条 -->
                    <com.google.android.material.slider.Slider
                        android:id="@+id/slider_font_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:valueFrom="12"
                        android:valueTo="20"
                        android:stepSize="1"
                        android:value="16" />

                    <!-- 预览文本 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/divider"
                        app:cardBackgroundColor="@color/background">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/font_preview"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_preview_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/font_preview_text"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- 应用按钮 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_apply_font_size"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/apply"
                        android:textColor="@color/primary"
                        android:textSize="16sp"
                        app:cornerRadius="8dp"
                        app:strokeColor="@color/primary"
                        app:strokeWidth="1dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
