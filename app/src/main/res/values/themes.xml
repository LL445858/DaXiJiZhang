<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Daxijizhang" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background</item>
        <!-- Disable force dark mode -->
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
        <!-- BottomNavigationView样式 -->
        <item name="bottomNavigationStyle">@style/Widget.Daxijizhang.BottomNavigationView</item>
    </style>

    <!-- 自定义BottomNavigationView样式 -->
    <style name="Widget.Daxijizhang.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- 使用默认字体大小，让它响应系统字体缩放 -->
        <item name="itemTextAppearanceActive">@style/TextAppearance.Daxijizhang.BottomNavigation</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.Daxijizhang.BottomNavigation</item>
    </style>

    <!-- BottomNavigationView文字样式 -->
    <style name="TextAppearance.Daxijizhang.BottomNavigation" parent="TextAppearance.AppCompat.Caption">
        <!-- 使用sp单位，确保响应字体缩放 -->
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Theme for activities to ensure light mode -->
    <style name="Theme.Daxijizhang.NoActionBar" parent="Theme.Daxijizhang">
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

    <!-- Theme for secondary activities with white status bar -->
    <style name="Theme.Daxijizhang.Secondary" parent="Theme.Daxijizhang">
        <!-- White status bar -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Dark text on status bar for better contrast -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Disable force dark mode -->
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

    <!-- ColorPicker Dialog Theme with rounded corners -->
    <style name="ColorPickerDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@drawable/bg_color_picker_dialog</item>
        <item name="android:windowMinWidthMajor">70%</item>
        <item name="android:windowMinWidthMinor">70%</item>
    </style>
</resources>
