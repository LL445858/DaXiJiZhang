<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 圆形ImageView样式 -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <!-- 快速弹窗动画样式 -->
    <style name="DialogAnimationFast">
        <item name="android:windowEnterAnimation">@anim/dialog_fast_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_fast_out</item>
    </style>

    <!-- 自定义Toolbar样式 - 缩小字体、加粗、缩短高度 -->
    <style name="CompactToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_height">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="titleTextAppearance">@style/CompactToolbarTitleStyle</item>
    </style>

    <!-- Toolbar标题文字样式 - 缩小80%、不加粗 -->
    <style name="CompactToolbarTitleStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
