<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 存储权限 - Android 13以下使用 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <!-- 媒体权限 - Android 13+使用 -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Daxijizhang"
        tools:targetApi="31">

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Daxijizhang">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.bill.AddBillActivity"
            android:label="@string/add_bill_title"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Daxijizhang.Secondary" />

        <activity
            android:name=".ui.bill.BillDetailActivity"
            android:label="@string/bill_detail_title"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Daxijizhang.Secondary" />

        <activity
            android:name=".ui.bill.SearchActivity"
            android:label="查找账单"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Daxijizhang.Secondary" />

        <!-- 信息设置页面 - 父Activity改为MainActivity -->
        <activity
            android:name=".ui.settings.InfoSettingsActivity"
            android:label="@string/info_settings"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Daxijizhang.Secondary" />

        <!-- 显示设置页面 - 父Activity改为MainActivity -->
        <activity
            android:name=".ui.settings.DisplaySettingsActivity"
            android:label="@string/display_settings"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Daxijizhang.Secondary" />

        <!-- 数据迁移页面 - 父Activity改为MainActivity -->
        <activity
            android:name=".ui.settings.DataMigrationActivity"
            android:label="@string/data_migration"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Daxijizhang.Secondary" />

        <!-- 更多设置页面 - 父Activity改为MainActivity -->
        <activity
            android:name=".ui.settings.MoreSettingsActivity"
            android:label="@string/remote_sync"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Daxijizhang.Secondary" />

    </application>

</manifest>
